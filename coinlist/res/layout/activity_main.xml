<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Fill">

    <LinearLayout style="@style/ActionBar">
        <TextView android:text="@string/app_name"
            style="@style/ActionBarTitle" />

        <ImageButton android:id="@+id/main_starred_button"
            android:src="@drawable/ic_star"
            style="@style/ActionBarIconButton" />

        <ImageButton android:id="@+id/main_refresh_button"
            android:src="@drawable/ic_refresh"
            style="@style/ActionBarIconButton" />

        <ImageButton android:id="@+id/main_options_menu_button"
            android:src="@drawable/ic_dots_vertical"
            style="@style/ActionBarIconButton" />
    </LinearLayout>

    <ListView android:id="@+id/main_coins_list"
        style="@style/ListFlex" />
</LinearLayout>
