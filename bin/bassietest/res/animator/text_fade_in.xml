<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android"
    android:interpolator="@android:anim/accelerate_decelerate_interpolator">

    <objectAnimator android:propertyName="backgroundColor"
        android:duration="@integer/animation_duration"
        android:valueFrom="@color/loading_background_color"
        android:valueTo="@android:color/transparent" />

    <objectAnimator android:propertyName="textColor"
        android:duration="@integer/animation_duration"
        android:valueFrom="@android:color/transparent"
        android:valueTo="@color/primary_text_color" />
</set>
