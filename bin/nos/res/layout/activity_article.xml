<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Fill">

    <LinearLayout style="@style/ActionBar">
        <ImageButton android:id="@+id/article_back_button"
            android:src="@drawable/ic_arrow_left"
            style="@style/ActionBarIconButton" />

        <View style="@style/Flex" />

        <ImageButton android:id="@+id/activity_share_button"
            android:src="@drawable/ic_share_variant"
            style="@style/ActionBarIconButton" />
    </LinearLayout>

    <ScrollView android:id="@+id/article_scroll"
        style="@style/Flex">

        <LinearLayout style="@style/Container">
            <ImageView android:id="@+id/article_image"
                style="@style/ArticleActivityImage" />

            <TextView android:id="@+id/article_contents"
                style="@style/ArticleActivityContents" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
