<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Fill">

    <LinearLayout style="@style/ActionBar">
        <ImageButton android:id="@+id/article_back_button"
            android:src="@drawable/ic_arrow_left"
            style="@style/ActionBarIconButton" />
    </LinearLayout>

    <ScrollView android:id="@+id/article_scroll"
        style="@style/Flex">

        <LinearLayout style="@style/Fill">
            <ImageView android:id="@+id/article_image"
                style="@style/ArticleActivityImage" />

            <LinearLayout android:id="@+id/article_content"
                style="@style/ArticleActivityContent">

                <TextView android:id="@+id/article_title_label"
                    style="@style/ArticleActivityTitle" />

                <TextView android:id="@+id/article_date_label"
                  style="@style/ArticleActivityDate" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
