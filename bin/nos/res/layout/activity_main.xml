<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Fill">

    <LinearLayout style="@style/ActionBar">
        <TextView android:id="@+id/main_title_label"
            style="@style/ActionBarTitle" />

        <ImageButton android:id="@+id/main_refresh_button"
            android:src="@drawable/ic_refresh"
            style="@style/ActionBarIconButton" />

        <ImageButton android:id="@+id/main_options_button"
            android:src="@drawable/ic_dots_vertical"
            style="@style/ActionBarIconButton" />
    </LinearLayout>

    <!-- Main content -->
    <ViewFlipper android:id="@+id/main_view_flipper"
        android:inAnimation="@anim/fade_in"
        style="@style/Flex">

        <GridView android:id="@+id/main_latest_articles_list"
            style="@style/ArticleList" />

        <GridView android:id="@+id/main_economy_articles_list"
            style="@style/ArticleList" />

        <GridView android:id="@+id/main_politics_articles_list"
            style="@style/ArticleList" />

        <GridView android:id="@+id/main_tech_articles_list"
            style="@style/ArticleList" />

        <GridView android:id="@+id/main_sports_articles_list"
            style="@style/ArticleList" />
    </ViewFlipper>

    <!-- Bottom Bar -->
    <LinearLayout android:id="@+id/main_bottom_bar"
        style="@style/BottomBar">

        <LinearLayout android:id="@+id/main_latest_button"
            style="@style/BottomBarItem">

            <ImageView android:src="@drawable/ic_clock_outline"
                style="@style/BottomBarItemIcon" />

            <TextView android:text="@string/main_latest_button"
                style="@style/BottomBarItemLabel" />
        </LinearLayout>

        <LinearLayout android:id="@+id/main_economy_button"
            style="@style/BottomBarItem">

            <ImageView android:src="@drawable/ic_coin_outline"
                style="@style/BottomBarItemIcon" />

            <TextView android:text="@string/main_economy_button"
                style="@style/BottomBarItemLabel" />
        </LinearLayout>

        <LinearLayout android:id="@+id/main_politics_button"
            style="@style/BottomBarItem">

            <ImageView android:src="@drawable/ic_bank"
                style="@style/BottomBarItemIcon" />

            <TextView android:text="@string/main_politics_button"
                style="@style/BottomBarItemLabel" />
        </LinearLayout>

        <LinearLayout android:id="@+id/main_tech_button"
            style="@style/BottomBarItem">

            <ImageView android:src="@drawable/ic_chip"
                style="@style/BottomBarItemIcon" />

            <TextView android:text="@string/main_tech_button"
                style="@style/BottomBarItemLabel" />
        </LinearLayout>

        <LinearLayout android:id="@+id/main_sports_button"
            style="@style/BottomBarItem">

            <ImageView android:src="@drawable/ic_basketball"
                style="@style/BottomBarItemIcon" />

            <TextView android:text="@string/main_sports_button"
                style="@style/BottomBarItemLabel" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
