<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Latest tab -->
        <LinearLayout android:id="@+id/latest_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/primary_color"
                android:elevation="4dp">

                <TextView android:text="@string/latest_title"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" />

                <ImageView android:id="@+id/latest_refresh_button"
                    android:src="@drawable/ic_refresh"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:scaleType="center" />
            </LinearLayout>

            <ListView android:id="@+id/latest_articles_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="@null"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:clipToPadding="false"
                android:scrollbarStyle="outsideOverlay" />
        </LinearLayout>

        <!-- Sports tab -->
        <LinearLayout android:id="@+id/sports_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/primary_color"
                android:elevation="4dp">

                <TextView android:text="@string/sports_title"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" />

                <ImageView android:id="@+id/sports_refresh_button"
                    android:src="@drawable/ic_refresh"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:scaleType="center" />
            </LinearLayout>

            <ListView android:id="@+id/sports_articles_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="@null"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:clipToPadding="false"
                android:scrollbarStyle="outsideOverlay" />
        </LinearLayout>

        <!-- Economy tab -->
        <LinearLayout android:id="@+id/economy_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/primary_color"
                android:elevation="4dp">

                <TextView android:text="@string/economy_title"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" />

                <ImageView android:id="@+id/economy_refresh_button"
                    android:src="@drawable/ic_refresh"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:scaleType="center" />
            </LinearLayout>

            <ListView android:id="@+id/economy_articles_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="@null"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:clipToPadding="false"
                android:scrollbarStyle="outsideOverlay" />
        </LinearLayout>

        <!-- Tech tab -->
        <LinearLayout android:id="@+id/tech_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/primary_color"
                android:elevation="4dp">

                <TextView android:text="@string/tech_title"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" />

                <ImageView android:id="@+id/tech_refresh_button"
                    android:src="@drawable/ic_refresh"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:scaleType="center" />
            </LinearLayout>

            <ListView android:id="@+id/tech_articles_list"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:divider="@null"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:clipToPadding="false"
                android:scrollbarStyle="outsideOverlay" />
        </LinearLayout>

        <!-- Settings tab -->
        <LinearLayout android:id="@+id/settings_tab"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="56dp"
                android:background="@color/primary_color"
                android:elevation="4dp">

                <TextView android:text="@string/settings_button"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp" />
            </LinearLayout>

            <ScrollView android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <LinearLayout android:id="@+id/settings_language_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:padding="16dp">

                        <TextView android:text="@string/settings_language"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView android:id="@+id/settings_language_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondary_text_color" />
                    </LinearLayout>

                    <LinearLayout android:id="@+id/settings_theme_button"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:padding="16dp">

                        <TextView android:text="@string/settings_theme"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1" />

                        <TextView android:id="@+id/settings_theme_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/secondary_text_color" />
                    </LinearLayout>

                    <TextView android:id="@+id/settings_about_button"
                        android:text="@string/settings_about"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:gravity="center_horizontal"
                        android:textColor="@color/secondary_text_color" />
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </FrameLayout>

    <!-- Bottom Bar -->
    <LinearLayout android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/primary_color"
        android:elevation="8dp">

        <LinearLayout android:id="@+id/latest_button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView android:src="@drawable/ic_clock_outline"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView android:text="@string/latest_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout android:id="@+id/sports_button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:alpha="@dimen/bottom_bar_button_inactive_alpha">

            <ImageView android:src="@drawable/ic_basketball"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView android:text="@string/sports_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout android:id="@+id/economy_button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:alpha="@dimen/bottom_bar_button_inactive_alpha">

            <ImageView android:src="@drawable/ic_coin_outline"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView android:text="@string/economy_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout android:id="@+id/tech_button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:alpha="@dimen/bottom_bar_button_inactive_alpha">

            <ImageView android:src="@drawable/ic_chip"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView android:text="@string/tech_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout android:id="@+id/settings_button"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:alpha="@dimen/bottom_bar_button_inactive_alpha">

            <ImageView android:src="@drawable/ic_settings"
                android:layout_width="24dp"
                android:layout_height="24dp" />

            <TextView android:text="@string/settings_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
