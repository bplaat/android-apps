<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Root">

    <LinearLayout style="@style/ActionBar">
        <TextView android:text="@string/app_name"
            style="@style/ActionBarTitle" />

        <ImageButton android:id="@+id/main_starred_button"
            android:src="@drawable/ic_star"
            style="@style/ActionBarIconButton" />

        <ImageButton android:id="@+id/main_refresh_button"
            android:src="@drawable/ic_refresh"
            style="@style/ActionBarIconButton" />

        <ImageButton android:id="@+id/main_settings_button"
            android:src="@drawable/ic_settings"
            style="@style/ActionBarIconButton" />
    </LinearLayout>

    <ListView android:id="@+id/main_coins_list"
        style="@style/ListContainer" />
</LinearLayout>
