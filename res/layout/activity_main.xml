<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Main page -->
    <LinearLayout android:id="@+id/main_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

            <!-- Latest tab -->
            <LinearLayout android:id="@+id/latest_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="?primary_color">

                    <TextView android:text="@string/latest_title"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp" />

                    <ImageView android:id="@+id/latest_refresh_button"
                        android:src="?ic_refresh"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:scaleType="center" />
                </LinearLayout>

                <ListView android:id="@+id/latest_articles_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:divider="@null"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:clipToPadding="false"
                    android:scrollbarStyle="outsideOverlay" />
            </LinearLayout>

            <!-- Sports tab -->
            <LinearLayout android:id="@+id/sports_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="?primary_color">

                    <TextView android:text="@string/sports_title"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp" />

                    <ImageView android:id="@+id/sports_refresh_button"
                        android:src="?ic_refresh"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:scaleType="center" />
                </LinearLayout>

                <ListView android:id="@+id/sports_articles_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:divider="@null"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:clipToPadding="false"
                    android:scrollbarStyle="outsideOverlay" />
            </LinearLayout>

            <!-- Economy tab -->
            <LinearLayout android:id="@+id/economy_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="?primary_color">

                    <TextView android:text="@string/economy_title"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp" />

                    <ImageView android:id="@+id/economy_refresh_button"
                        android:src="?ic_refresh"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:scaleType="center" />
                </LinearLayout>

                <ListView android:id="@+id/economy_articles_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:divider="@null"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:clipToPadding="false"
                    android:scrollbarStyle="outsideOverlay" />
            </LinearLayout>

            <!-- Tech tab -->
            <LinearLayout android:id="@+id/tech_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="?primary_color">

                    <TextView android:text="@string/tech_title"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp" />

                    <ImageView android:id="@+id/tech_refresh_button"
                        android:src="?ic_refresh"
                        android:layout_width="56dp"
                        android:layout_height="56dp"
                        android:scaleType="center" />
                </LinearLayout>

                <ListView android:id="@+id/tech_articles_list"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:divider="@null"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:clipToPadding="false"
                    android:scrollbarStyle="outsideOverlay" />
            </LinearLayout>

            <!-- Settings tab -->
            <LinearLayout android:id="@+id/settings_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="?primary_color">

                    <TextView android:text="@string/settings_button"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:textStyle="bold"
                        android:textSize="20sp"
                        android:paddingLeft="16dp"
                        android:paddingRight="16dp" />
                </LinearLayout>

                <ScrollView android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1">

                    <LinearLayout android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="16dp">

                            <TextView android:text="@string/dark_theme_label"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="4dp"
                                android:textColor="?secondary_text_color" />

                            <Switch android:id="@+id/dark_theme_switch"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>

                        <Button android:id="@+id/settings_save_button"
                            android:text="@string/save_button"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp" />

                        <TextView android:text="@string/about"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:gravity="center"
                            android:lineSpacingMultiplier="1.2"
                            android:textColor="?secondary_text_color" />
                    </LinearLayout>
                </ScrollView>
            </LinearLayout>
        </FrameLayout>

        <!-- Bottom Bar -->
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?primary_color">

            <LinearLayout android:id="@+id/latest_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <ImageView android:src="?ic_clock_outline"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

                <TextView android:text="@string/latest_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout android:id="@+id/sports_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:alpha="?bottom_bar_button_alpha">

                <ImageView android:src="?ic_basketball"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

                <TextView android:text="@string/sports_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout android:id="@+id/economy_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:alpha="?bottom_bar_button_alpha">

                <ImageView android:src="?ic_coin_outline"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

                <TextView android:text="@string/economy_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout android:id="@+id/tech_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:alpha="?bottom_bar_button_alpha">

                <ImageView android:src="?ic_chip"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

                <TextView android:text="@string/tech_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout android:id="@+id/settings_button"
                android:layout_width="0dp"
                android:layout_height="56dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:alpha="?bottom_bar_button_alpha">

                <ImageView android:src="?ic_settings"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

                <TextView android:text="@string/settings_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Article page -->
    <LinearLayout android:id="@+id/article_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="?background_color"
        android:visibility="gone">

        <LinearLayout android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?primary_color">

            <ImageView android:id="@+id/article_back_button"
                android:src="?ic_arrow_left"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:scaleType="center" />
        </LinearLayout>

        <ScrollView android:id="@+id/article_scroll"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView android:id="@+id/article_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:adjustViewBounds="true"
                    android:scaleType="centerCrop" />

                <LinearLayout android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp"
                    android:orientation="vertical">

                    <TextView android:id="@+id/article_title_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:textStyle="bold"
                        android:textSize="20sp" />

                    <TextView android:id="@+id/article_date_label"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:textStyle="italic"
                        android:textColor="?secondary_text_color" />

                    <LinearLayout android:id="@+id/article_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
